{
  "manifest_version": 3,
  "name": "ColorGuide Online Shopping Assistant",
  "description": "This browser extension allows users to see the simple color labels of products. Our goal is to eliminate confusion surrounding the colors of products when shopping online by providing simple color labels. ",
  "version": "1.0",
  "icons": {
    "16": "/images/16-1.png",
    "19": "/images/19-1.png",
    "32": "/images/32-1.png",
    "38": "/images/38-1.png",
    "48": "/images/48-1.png",
    "128": "/images/128-1.png"
  },
  "permissions": [
    "background",
    "tabs",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/contentScript.js", "content/label.js", "content/color.js", "content/ntc.js"]
    }
  ],
  "commands": {
    "toggleTool": {
      "suggested_key": {
        "default": "Alt+Shift+W",
        "mac": "Alt+Shift+W"
      }, 
      "description": "Toggle tool"
    },
      "removeLabels": {
      "suggested_key": {
        "default": "Alt+Shift+R",
        "mac": "Alt+Shift+R"
      },
      "description": "Remove Labels"
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Alt+Shift+W",
        "mac": "Alt+Shift+W"
      }
    }
  },
  "action": {
    "default_popup": "popup/popup.html"
  }

}

