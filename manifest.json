{
  "manifest_version": 3,
  "name": "ColorGuide Online Shopping Assistant",
  "description": "Insert description here",
  "version": "1.0",
  "permissions": [
    "background",
    "tabs",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js", "label.js"]
    }
  ],
  "commands": {
    "toggle": {
      "suggested_key": {
        "default": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      },
      "description": "Toggle tool"
    },
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+1",
        "mac": "Command+Shift+1"
      }
    }
  },
  "action": {
    "default_popup": "popup/popup.html"
  }

}
